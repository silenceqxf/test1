/* pages/second_level/rent/cart/cart.wxss */
page{
  background-color:#f0f0f0;
}
.order_group{
  padding-bottom: 200rpx;
}
.order{
  padding: 20rpx 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.order:not(:last-child){
  border-bottom: 2rpx solid #f0f0f0;
}
.order .goods_group{
  background-color: #f0f0f0;
  margin: 20rpx 0;
  padding: 20rpx 0;
}
.goods_group .tip{
  text-align: center;
  display: block;
  margin: 10rpx 0;
}
.goods_group .goods{
  padding: 10rpx 20rpx;
}
.goods_group .goods:not(:last-child){
  border-bottom: 1rpx solid #fff;
}
.goods .left,
.goods .right{
  display: inline-block;
  vertical-align: middle;
}
.goods .left{
  width: 25%;
}
.goods .right{
  width: 75%;
}
.goods image{
  width: 160rpx;
  height: 160rpx;
  display: inline-block;
  vertical-align: middle;
}
.goods_group .goods .goods_name{
  margin: 10rpx 0 20rpx 20rpx;
  display: inline-block;
  vertical-align: middle;
}
.batch_group{
  text-align: right;
}
.batch_group view{
  margin: 0 20rpx;
  display: inline-block;
  vertical-align: middle;
}
.batch_group .batch{
  background-color: #fff;
}
.batch_del{
  margin-right: 40rpx; 
  font-size: 24rpx;
}
.batch_group .batch text,
.batch_group .batch label{
  text-align: center;
  display: inline-block;
  vertical-align: middle;
  width: 50rpx;
  height: 50rpx;
}
.batch_group .batch text{
  padding: 0 10rpx;
  border-top: 1rpx solid #ddd;
  border-bottom: 1rpx solid #ddd;
}
.batch_group .batch label{
  border: 1rpx solid #ddd;
}
.option{
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: #fff;
}
.option view{
  padding: 30rpx 0;
  display: inline-block;
  vertical-align: middle;
}
.option .total{
  width: 60%;
}
.option .deal{
  width: 40%;
  /* background-color: #FF8C00; */
  background-color:#54afc5;
  text-align: center;
}
.option .deal text{
  color: #fff;
  text-align: center;
}
.total_count{
  margin-left: 30rpx;
}
.total_price{
  margin-left: 15rpx;
}

