/* pages/my_clean/my_clean.wxss */
.page{
  width:100%;
  height:100%;
  background-color:#f0f0f0;
  font-family:  "PingFang SC","Microsoft YaHei",Arial,sans-serif; 
}
/*每一条的*/
.list_item{
  display:flex;
  flex-direction:column;
  background-color:#fff;
  margin:20rpx 0;
}
.list_item_top{
  display:flex;
  flex-direction:column;
  margin:0 30rpx;
  padding:30rpx 0;
  border-bottom:2rpx #dbc5ba solid;
}
.top_left{
  flex:1;
  color:#dbc5ba;
  font-size:12px;
}
.top_right{
  color:#f45e4e;
  font-size:12px;
}
.list_item_bottom{
  display:flex;
  flex-direction:row;
}
.list_item_left_icon{
  width:200rpx;
  height:200rpx;
  border-radius:50%;
  margin:30rpx;
}
.list_item_right{
  flex:1;
  margin:30rpx 30rpx 30rpx 0;
}
.item_name{
  color:#632714;
  font-size:14px;
  margin-bottom:20rpx;
}
.item_desc{
  color:#333;
  font-size:12px;
  margin-bottom:20rpx;
}
.item_time{
  color:#ff62a7;
  font-size:12px;
  margin-bottom:20rpx;
}
.item_tip{
  color:#ff62a7;
  font-size:12px;
}
.btn_cancel{
  width:200rpx;
  color:#eee;
  font-size:14px;
  height:58rpx;
  margin-left:2rpx;
  background-color:#26a69a;
}
.btn_cancel_selected{
  opacity:0.6;
}
.tip{
  height:100%;
}